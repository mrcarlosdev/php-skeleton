{
    "name": "carlos/php-skeleton",
    "description": "A simple skeleton infrastructure for PHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos PÃ©rez",
            "email": "mrcarlosdev@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "": [
                "src/"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": [
                "tests/"
            ]
        }
    },
    "config": {
        "bin-dir": "bin/",
        "preferred-install": "dist"
    }
}
